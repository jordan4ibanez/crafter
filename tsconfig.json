{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "System",
    "moduleResolution": "Node",
    "lib": ["ESNext"],

    "types": [
      "lua-types/jit",
      "./minetest-api"
    ],
    "strict": true,
    "outDir": "mods/",
    "rootDir": "source/",
    "sourceMap": false,
    "downlevelIteration": true
  },
  "include": [
    "source/**/*.ts"
  ],
  "exclude": [
    "mods/**/*.lua",
    "mods/**/*.mts",
  ],
  "tstl": {
    "luaTarget": "JIT",
    "noHeader": true,
    "noImplicitSelf": true,
    "sourceMapTraceback": true,
    "luaLibImport": "inline"
  }
}